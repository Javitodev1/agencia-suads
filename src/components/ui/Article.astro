---
interface Props {
  start: 'left' | 'right',
}

const { start } = Astro.props;
---

<article class="md:flex md:gap-4 py-12">
  <div class="md:w-1/2" class:list={[
    {"md:order-last": start === 'right'},
    {"md:pr-4": start === 'left'},
    {"md:pl-4": start === 'right'},
    ]}>
    <div class="mb-4 text-3xl font-semibold">
      <slot name="title" />
    </div>
    <div class="text-xl text-balance leading-relaxed mb-4 md:mb-0">
      <slot name="body" />
    </div>
  </div>
  <div class="md:w-1/2 w-full">
    <slot name="img" />
  </div>
</article>