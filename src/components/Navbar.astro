---
import Logo from "../images/svg/Logo.astro";

interface Anchor {
  url: string;
  content: string;
}

interface Props {
  anchors: Anchor[];
}
const { anchors } = Astro.props;
---

<nav class="absolute top-0 left-0 bg-transparent w-full z-20">
  <header
    class="container m-auto flex justify-between items-center text-gray-700 py-4 px-4"
  >
    <span class="flex justify-center items-center gap-2">
      <Logo class="h-10 w-10" />
      <h1 class="text-xl font-bold uppercase text-white">suads</h1>
    </span>

    <ul
      class={`
      hidden md:flex items-center text-base font-semibold cursor-pointer
      [&>li]:py-4 [&>li]:px-6 [&>li]:rounded [&>li]:text-white
    `}
    >
      {
        [...anchors].map((anchor) => (
          <li>
            <a href={anchor.url}>{anchor.content}</a>
          </li>
        ))
      }
    </ul>

