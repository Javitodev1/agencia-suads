---
import Logo from "@/svg/Logo.astro"
import monitorImg from "images/monitor.webp"
import partnersImg from "images/partners.jpg"
---

<section class="-mt-10 clip bg-white h-20 w-full"></section>

<section class="flex flex-col items-center w-full bg-white">
  <img
    src={monitorImg.src}
    alt="campaign-metrics"
    class="w-full md:w-1/2 -mt-32 z-10"
  />
  <img
    src={partnersImg.src}
    alt="associated-with-suads"
    class="w-full md:w-3/4 md:opacity-60"
  />
</section>

<div
  class="inline-flex items-center justify-center w-full bg-white md:py-20 py-10"
>
  <hr class="w-3/4 h-1 my-8 bg-gray-200 border-0 rounded dark:bg-gray-40000" />
  <Logo class="w-14 h-14 md:w-20 md:h-20 absolute bg-white" />
</div>

<style>
  .clip {
    clip-path: polygon(0 50%, 100% 0, 100% 100%, 0% 100%);
  }
</style>
